{
  "name": "petbook",
  "version": "0.1.0",
  "description": "PetBook SaaS - Digitalização do Livro de Banho & Tosa",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__ --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration --coverage --watchAll=false",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:component": "cypress run --component",
    "test:component:open": "cypress open --component",
    "test:visual": "cypress run --spec \"cypress/e2e/visual-regression.cy.ts\"",
    "test:smoke": "cypress run --spec \"cypress/e2e/smoke-tests.cy.ts\"",
    "test:health": "cypress run --spec \"cypress/e2e/health-checks.cy.ts\"",
    "test:all": "npm run test:ci && npm run test:e2e",
    "test:ci:full": "npm run lint && npm run type-check && npm run test:ci && npm run test:e2e && npm run test:visual",
    "ci:check": "npm run type-check && npm run lint && npm run test:ci",
    "ci:build": "npm run build",
    "ci:setup": "node scripts/setup-ci-cd.js",
    "ci:validate": "node scripts/validate-ci-cd.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit --audit-level=high",
    "security:fix": "npm audit --fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:audit": "npm audit --fix",
    "generate:baseline": "node scripts/generate-baseline-screenshots.js",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert",
    "lighthouse:upload": "lhci upload"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@cypress/code-coverage": "^3.14.5",
    "@cypress/vite-dev-server": "^6.0.3",
    "@lhci/cli": "^0.12.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.0.0",
    "cypress": "^14.5.2",
    "cypress-multi-reporters": "^2.0.5",
    "cypress-visual-regression": "^5.3.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-testing-library": "^7.6.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lighthouse": "^11.0.0",
    "mocha-junit-reporter": "^2.2.1",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "next": "^15.4.2"
  }
}
