{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "dependsOn": ["^test:watch"],
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "outputs": ["coverage/**"]
    },
    "ci:check": {
      "dependsOn": ["^ci:check"]
    },
    "ci:build": {
      "dependsOn": ["^ci:build"],
      "outputs": [".next/**", "dist/**"]
    },
    "security:audit": {
      "cache": false
    },
    "security:check": {
      "cache": false
    },
    "deps:check": {
      "cache": false
    },
    "deps:update": {
      "cache": false
    },
    "deps:audit": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
